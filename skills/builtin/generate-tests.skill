{
  "name": "generate-tests",
  "description": "为代码生成单元测试",
  "version": "1.0.0",
  "author": "RoboClaw",
  "triggers": [
    "生成测试",
    "generate tests",
    "写测试",
    "test"
  ],
  "parameters": {
    "file_path": {
      "type": "string",
      "description": "要测试的源文件路径",
      "required": true
    },
    "test_framework": {
      "type": "string",
      "description": "测试框架",
      "default": "Catch2",
      "required": false
    }
  },
  "actions": [
    {
      "type": "tool",
      "name": "read",
      "description": "读取源代码",
      "parameters": {
        "file": "${file_path}"
      }
    },
    {
      "type": "llm",
      "description": "生成测试代码",
      "prompt_template": "为以下代码生成单元测试（使用${test_framework}框架）：\n\n${file_content}\n\n要求：\n- 覆盖正常路径和边界条件\n- 包含必要的测试用例\n- 测试代码清晰可维护\n\n请提供完整的测试文件内容。"
    }
  ]
}
