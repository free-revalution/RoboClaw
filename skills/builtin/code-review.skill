{
  "name": "code-review",
  "description": "审查代码质量、安全性、性能",
  "version": "1.0.0",
  "author": "RoboClaw",
  "triggers": [
    "审查代码",
    "code review",
    "检查代码",
    "review"
  ],
  "parameters": {
    "file_path": {
      "type": "string",
      "description": "要审查的文件路径",
      "required": true
    }
  },
  "actions": [
    {
      "type": "tool",
      "name": "read",
      "description": "读取目标文件",
      "parameters": {
        "file": "${file_path}"
      }
    },
    {
      "type": "llm",
      "description": "分析代码质量",
      "prompt_template": "请审查以下代码，检查：\n1. 潜在的bug和逻辑错误\n2. 安全漏洞\n3. 性能优化机会\n4. 代码风格和可读性\n\n代码内容：\n${file_content}\n\n请提供详细的审查报告。"
    }
  ]
}
